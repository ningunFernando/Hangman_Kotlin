<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_levelCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="100dp"
    android:background="@color/gray_400"
    android:orientation="horizontal"
    android:padding="16dp"
    tools:context=".LevelSelectorActivity">


    <ImageView
        android:id="@+id/cv_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:id="@+id/cv_levelDataContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cv_dificulty"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight=".1"
            android:text="Dificultad"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cv_word"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight=".1"
            android:text="Palabra"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/cv_lenght"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight=".1"
            android:text="largo palabra"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>